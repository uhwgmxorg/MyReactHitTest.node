{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vite:start",
      "type": "shell",
      "command": "npx",
      "args": ["vite"],
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": ".*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}